TITLE PITAR
page, 		132
STACK_SEG	SEGMENT		STACK 'STACK'
		DB		64 DUP(?)
STACK_SEG	ENDS

CODE_SEG	SEGMENT		'CODE'
PITO	PROC	FAR
   	ASSUME	CS:CODE_SEG, SS:STACK_SEG
	
	PUSH DS
	MOV AX,0
	PUSH AX
	
	MOV AL,0B6H
	OUT 43H,AL
	MOV AX,391H
	OUT 42H,AL
	MOV AL,AH
	OUT 42H,AL
	IN AL,61H
	MOV AH,AL
	OR AL,3
	OUT 61H,AL
	MOV CX,5060H
	
RETAR:  NOP
	NOP
	NOP
	NOP
	NOP
	NOP
	NOP
	NOP
	NOP
	LOOP RETAR
	MOV AL,AH
	OUT 61H,AL
	RET
	
PITO    ENDP

CODE_SEG	ENDS
	END PITO
	

